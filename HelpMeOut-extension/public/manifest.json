{
    "manifest_version": 3,
    "name": "HelpMeOut",
    "version": "1.0.0",
    "icons": {
        "32": "logo.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "32": "logo.png"
        }
    },

    "background": {
        "service_worker": "background.js"
    },

    "host_permissions": [
        "http://*/*",
        "https://*/*"

    ],

    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "desktopCapture"
    ]

}